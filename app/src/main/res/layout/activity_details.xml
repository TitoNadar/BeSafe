<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="1dp">

        <custom_font.MyTextView
            android:id="@+id/signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textColor="#00051f"
            android:textSize="25dp"
            android:layout_marginTop="5dp"

            />



        <custom_font.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NAME"
            android:inputType="text"
            android:textColorHint="#a9b0c3"
            android:textSize="18dp"
            android:background="#00000000"
            android:layout_marginTop="24dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a9b0c3"
            android:layout_marginTop="10dp"

            />


        <custom_font.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Aadhaar Number"
            android:inputType="text"
            android:textColorHint="#a9b0c3"
            android:layout_marginTop="32dp"
            android:textSize="18dp"
            android:background="#00000000"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a9b0c3"
            android:layout_marginTop="10dp"
            />

        <custom_font.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number 1"
            android:inputType="text"
            android:textColorHint="#a9b0c3"
            android:layout_marginTop="32dp"
            android:textSize="18dp"
            android:background="#00000000"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a9b0c3"
            android:layout_marginTop="10dp"
            />


        <custom_font.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number 2"
            android:inputType="text"
            android:textColorHint="#a9b0c3"
            android:textSize="18dp"
            android:background="#00000000"
            android:layout_marginTop="24dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a9b0c3"
            android:layout_marginTop="10dp"

            />
        <custom_font.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number 3"
            android:inputType="text"
            android:textColorHint="#a9b0c3"
            android:textSize="18dp"
            android:background="#00000000"
            android:layout_marginTop="24dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a9b0c3"
            android:layout_marginTop="10dp"

            />
        <custom_font.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number 4"
            android:inputType="text"
            android:textColorHint="#a9b0c3"
            android:textSize="18dp"
            android:background="#00000000"
            android:layout_marginTop="24dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a9b0c3"
            android:layout_marginTop="10dp"

            />
        <custom_font.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number 5"
            android:inputType="text"
            android:textColorHint="#a9b0c3"
            android:textSize="18dp"
            android:background="#00000000"
            android:layout_marginTop="24dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a9b0c3"
            android:layout_marginTop="10dp"

            />
        <custom_font.MyTextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save and Continue"
            android:textStyle="bold"
            android:background="@drawable/round"
            android:textColor="#CBD1DC"
            android:gravity="center"
            android:padding="14dp"
            android:layout_marginTop="42dp"/>

    </LinearLayout>


</RelativeLayout>



